<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="40"
            Spacing="40"
            BackgroundColor="DarkSlateGray">

            <Label Text="Notes" 
                   FontSize="Header"
                   HorizontalOptions="Center"/>


            
            <VerticalStackLayout HeightRequest="300" VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" >
                <Button Text="Add Note" BackgroundColor="LightBlue" TextColor="Black" WidthRequest="200" HorizontalOptions="Center"  Clicked="AddNoteMenuClicked"/>
                <Button Text="View Notes" BackgroundColor="LightBlue" TextColor="Black" WidthRequest="200" HorizontalOptions="Center"  Clicked="ViewNoteClicked"/>
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
