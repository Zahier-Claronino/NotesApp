<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.ViewNotes"
             Title="ViewNotes">
    <VerticalStackLayout Spacing="30">
        <Label 
            Text="All Notes"
            HorizontalOptions="Center"
            FontSize="Header"/>

        
            <ListView x:Name="NotesListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <VerticalStackLayout Spacing="10">
                                <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Id, StringFormat='{0})'} " FontSize="Medium" FontAttributes="Bold"/>
                                <Label x:Name="DisplayNotes" Text="{Binding Title }" FontSize="Medium" FontAttributes="Bold"/>
                                </HorizontalStackLayout>
                        </VerticalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        
    </VerticalStackLayout>
</ContentPage>